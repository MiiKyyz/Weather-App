<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent">
    <ImageView
        android:orientation="vertical"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/default_photo"
        android:id="@+id/Background">
        

    </ImageView>
        <TextView
            android:text="@string/Choose"
            android:gravity="center"
            android:textSize="28sp"
            android:layout_marginTop="180dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#142400"
            android:background="@drawable/TitleDesign"
            android:id="@+id/textView1" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="70dp"
            android:id="@+id/radioGroup1">
            <RadioButton
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:gravity="center"
                android:text="@string/Kelvin"
                android:textSize="18sp"
                android:textColor="#4a9878"
                android:layout_margin="15dp"
                android:button="@android:color/transparent"
                android:background="@drawable/selector"
                android:id="@+id/kelvin_id" />
            <RadioButton
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:gravity="center"
                android:text="@string/Fahrenheit"
                android:layout_margin="15dp"
                android:textColor="#4a9878"
                android:textSize="18sp"
                android:background="@drawable/selector"
                android:button="@android:color/transparent"
                android:id="@+id/fahrenheit_id" />
            <RadioButton
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:gravity="center"
                android:text="@string/Celsius"
                android:layout_margin="15dp"
                android:textSize="18sp"
                android:textColor="#4a9878"
                android:background="@drawable/selector"
                android:button="@android:color/transparent"
                android:id="@+id/celsius_id" />
        </RadioGroup>
        <Button
            android:text="Continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="450dp"
            app:cornerRadius="20dp"
            android:textColor="#142400"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/button"
            tools:ignore="XmlNamespace" />


</RelativeLayout>
